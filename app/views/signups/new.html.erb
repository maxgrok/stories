<div class="signups">
  <div class ="container">
    <div class="row">
      <div class="col-md-8">
      </div>
      <div class="col-md-8 col-offset-2">
        <br /><br />
        <%= form_for(@new) do |t| %>
          <div class = "field">
            <%= t.text_field :firstname, :placeholder => :First_Name, :style =>"border-radius:5px; padding: 10px;" %><br />							<br />
            <%= t.text_field :email, :placeholder => :Email, :style =>"border-radius:5px; padding: 10px;" %>
          </div><br />
          <div class = "actions">
            <%= t.submit "Sign Up", :style => "padding:10px 15px 10px 15px;;", :class => "btn btn-success" %>
          </div>
        <% end %>
        </div>
      </div>
    </div>
  </div>
